@article{Alberton2009,
  title = {Ectomycorrhizal Fungi Associated with {{Pinus}} Sylvestris Seedlings Respond Differently to Increased Carbon and Nitrogen Availability: {{Implications}} for Ecosystem Responses to Global Change},
  author = {Alberton, Odair and Kuyper, Thomas W.},
  year = {2009},
  month = jan,
  journal = {Global Change Biology},
  volume = {15},
  number = {1},

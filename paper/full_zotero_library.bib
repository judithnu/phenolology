@article{Bogdziewicz2017,
  title = {Masting in Wind-Pollinated Trees: {{System-specific}} Roles of Weather and Pollination Dynamics in Driving Seed Production},
  author = {Bogdziewicz, Michal and Szymkowiak, Jakub and Kasprzyk, Idalia and Grewling, {\L}ukasz and Borowski, Zbigniew and Borycka, Katarzyna and Kantorowicz, Wladyslaw and Myszkowska, Dorota and Piotrowicz, Katarzyna and Ziemianin, Monika and Pesendorfer, Mario B.},
  year = {2017},

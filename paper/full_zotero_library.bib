  journal = {Molecular Biology and Evolution},
  doi = {10.1093/oxfordjournals.molbev.a025912},
  author = {Howe, Glenn T. and Bucciaglia, Paul A. and Hackett, Wesley P. and Furnier, Glenn R. and {Cordonnier-Pratt}, Marie Mich{\`e}le and Gardner, Gary},

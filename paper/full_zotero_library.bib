  author = {Blackawton, P. S. and Airzee, S. and Allen, A. and Baker, S. and Berrow, A. and Blair, C. and Churchill, M. and Coles, J. and Cumming, R. F.J. and Fraquelli, L. and Hackford, C. and Hinton Mellor, A. and Hutchcroft, M. and Ireland, B. and Jewsbury, D. and Littlejohns, A. and Littlejohns, G. and Lotto, M. and McKeown, J. and O'Toole, A. and Richards, H. and {Robbins-Davey}, L. and Roblyn, S. and {Rodwell-Lyn}, H. and Schenck, D. and Springer, J. and {WishyA.} and {Rodwell-Lynn}, T. and Strudwick, D. and Lotto, R. B.},

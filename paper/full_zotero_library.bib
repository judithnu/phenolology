@article{Hancock2011a,
  title = {Adaptations to Climate-Mediated Selective Pressures in Sheep},
  author = {Lv, Feng Hua and Agha, Saif and Kantanen, Juha and Colli, Licia and Stucki, Sylvie and Kijas, James W. and Joost, St{\'e}phane and Li, Meng Hua and Marsan, Paolo Ajmone},
  year = {2014},

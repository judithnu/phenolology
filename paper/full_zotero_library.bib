  year = {2019},
  keywords = {Climate change,Bud burst,Balsam fir,Black spruce,Ecotype,Phenotype},
  file = {/home/sus/Zotero/storage/D2EX3F4V/Zhang et al. - 2019 - Responses of bud-break phenology to daily-asymmetr.pdf}

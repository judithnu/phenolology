  journal = {Ecology},
  doi = {10.1890/04-0711},
  author = {Handa, I. Tanya and K{\"o}rner, Christian and H{\"a}ttenschwiler, Stephan},
  month = may,
  year = {2005},
  keywords = {\#nosource},
  pages = {1288-1300}
}


  keywords = {\#nosource}
}

@article{huismanLightLimitedGrowthCompetition1994,
  title = {Light-{{Limited Growth}} and {{Competition}} for {{Light}} in {{Well-Mixed Aquatic Environments}}: {{An Elementary Model}}},
  shorttitle = {Light-{{Limited Growth}} and {{Competition}} for {{Light}} in {{Well-Mixed Aquatic Environments}}},
  author = {Huisman, Jef and Weissing, Franz J.},
  year = {1994},
  month = mar,
  journal = {Ecology},
  volume = {75},

@inproceedings{Rehfeldt2004,
  title = {Genetic Responses to Climate and Climate Change in Conifers of the Temperate and Boreal Forests},
  booktitle = {Proceedings of the Twenty-Ninth Meeting of the {{Canadian}} Tree Improvement Association: {{Climate}} Change and Forest Genetics},
  author = {Rehfeldt, G E and Tchebakova, N M and Parfenova, E I},
  year = {2004},
  pages = {2--6},
  publisher = {{Research Signpost}},
  abstract = {The availability of climate data and sophisticated software for high speed computers has made it possible to assess the climatic factors underlying geographic patterns of genetic variation in forest trees. Analyses have demonstrated anew that the clines in genetic variation that typify most tree species indeed have been molded by and are perpetuated by the climate. Yet, distribution of genotypes across the landscape is controlled by an interaction between adaptation to climate and competition, the same factors governing the distribution of species. Genotypes occur where they can be competitively exclusive, but most, nonetheless, have been competitively excluded from their climatic optima. Most populations, therefore, exist in climates that are colder than the optimal for their growth, productivity, and survival, with the discrepancy between the inhabited and the optimal climate increasing with the severity of the climate. Responses to climate change can be viewed (1) as short-term plastic responses that accrue in endemic populations as physiological systems adjust to change, and (2) as long-term evolutionary processes that realign genetic variability with environmental diversity. Immediate short-term responses to a warming climate are dependent on the discrepancy between the inhabited and optimal climates. Responses, therefore, should be highly negative in populations occupying the mildest climates but positive in the coldest. As a result, expected short-term responses in Pinus sylvestris and Larix sibirica of Siberia are strongly positive while those of Picea engelmannii of western United States are highly negative. Accommodating global warming in the long term will require a redistribution of genotypes within species to match genotypes with the climate for which they are best suited. The process undoubtedly will be driven by migration, gene flow, and selection. Natural processes, however, tend to occur at rates too slow to match the projected speed of global warming. Without the intervention of mankind in the evolutionary processes, accommodating the warming expected by 2100 may require many centuries.},
  isbn = {2-00-431745-0},
  langid = {english},
  keywords = {\#nosource,üîçNo DOI found},
  file = {/home/sus/Zotero/storage/ZJ498MQZ/Rehfeldt et al. - GENETIC RESPONSES TO CLIMATE AND CLIMATE CHANGE IN.pdf}
}

@article{Rehfeldt2006,
  title = {Empirical {{Analyses}} of {{Plant}}-{{Climate Relationships}} for the {{Western United States}}},
  author = {Rehfeldt, Gerald E. and Crookston, Nicholas L. and Warwell, Marcus V. and Evans, Jeffrey S.},

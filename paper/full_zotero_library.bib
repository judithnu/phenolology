}

@article{Holliday2011,
  title = {Divergent Selection and Heterogeneous Migration Rates across the Range of {{Sitka}} Spruce ({{Picea}} Sitchensis)},
  author = {Holliday, Jason A. and Suren, Haktan and Aitken, Sally N.},

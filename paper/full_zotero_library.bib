@article{ISI:000289728200001,
  title = {From Prot\'eg\'e to Nurse Plant: {{Establishment}} of Thorny Shrubs in Grazed Temperate Woodlands},
  author = {Smit, Christian and Ruifrok, Jasper Laurens},
  year = {2011},
  month = jun,
  journal = {Journal of Vegetation Science},

  isbn = {1461-0248 (Electronic) 1461-023X (Linking)},
  pmid = {20649638},
  keywords = {\#nosource,Climate change,community assembly,conservation,disease ecology,food webs,habitat destruction,invasive species,niche conservatism,phylogeny,species richness},

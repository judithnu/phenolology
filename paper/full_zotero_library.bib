@article{gauzere2013,
  title = {Biases in Quantitative Genetic Analyses Using Open-Pollinated Progeny Tests from Natural Tree Populations},
  author = {Gauzere, Julie and {Oddou-Muratorio}, Sylvie and Pichot, Christian and Lef{\`e}vre, Fran{\c c}ois and Klein, Etienne},

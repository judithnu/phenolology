@article{Chmura2011,
  title = {Forest Responses to Climate Change in the Northwestern {{United States}}: {{Ecophysiological}} Foundations for Adaptive Management},
  author = {Chmura, Daniel J. and Anderson, Paul D. and Howe, Glenn T. and Harrington, Constance A. and Halofsky, Jessica E. and Peterson, David L. and Shaw, David C. and Brad St.Clair, J.},

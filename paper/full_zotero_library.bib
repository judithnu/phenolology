@article{Girardin2013,
  title = {Unusual Forest Growth Decline in Boreal {{North America}} Covaries with the Retreat of {{Arctic}} Sea Ice},
  author = {Girardin, Martin P. and Guo, Xiao Jing and De Jong, Rogier and Kinnard, Christophe and Bernier, Pierre and Raulier, Fr{\'e}d{\'e}ric},

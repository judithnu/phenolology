  author = {Sanford, Eric and Holzman, Samuel B and Haney, Robert A and Rand, David M and Bertness, Mark D},
  month = nov,
  year = {2006},
  keywords = {\#nosource},
  pages = {2882-2894},
  pmid = {17168032}
}


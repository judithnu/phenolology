  pmid = {22113032},
  keywords = {Abundant centre,Divergent selection,Effective population size},
  file = {/home/sus/Zotero/storage/8PNLFLXY/Holliday, Suren, Aitken - 2011 - Divergent selection and heterogeneous migration rates across the range of Sitka spruce (Picea sitchensi.pdf}
}


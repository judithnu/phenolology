}

@incollection{Gehring2002,
  title = {Mycorrhizae-{{Herbivore Interactions}}: {{Population}} and {{Community Consequences}}},
  booktitle = {Mycorrhizal Ecology},
  author = {Gehring, Catherine A. and Whitham, Thomas G.},
  editor = {{van der Heijden}, M.G.A. and Sanders, I.R.},
  year = {2002},
  pages = {295--320},
  publisher = {{Springer Verlag}},

  keywords = {climatic adaptation,lodgepole pine,polygenic traits,positive effect alleles,selective breeding},
  file = {/home/sus/Zotero/storage/5G5BGBWZ/maclachlan_et_al_2021_genome-wide_shifts_in_climate-related_variation_underpin_responses_to_selective.pdf;/home/sus/Zotero/storage/2L4PUCUY/e2016900118.html}

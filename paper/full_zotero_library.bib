@article{McLane2011b,
  title = {Climate Impacts on Lodgepole Pine ({{Pinus}} Contorta) Radial Growth in a Provenance Experiment},
  author = {McLane, Sierra C. and Daniels, Lori D. and Aitken, Sally N.},
